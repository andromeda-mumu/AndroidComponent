<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mmc.androidcomponent.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="异步GET请求"
            android:onClick="ayncGetNet"
    />

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="同步GET请求"
            android:onClick="syncGetNet"
    />
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="异步POST请求"
            android:onClick="ayncPostNet"
    />

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="同步POST请求"
            android:onClick="syncPostNet"
    />

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="异步upString"
        android:onClick="syncUpString"
        />


</LinearLayout>
